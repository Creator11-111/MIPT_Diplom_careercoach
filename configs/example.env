# Example Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git!

# ============================================================================
# YandexGPT Configuration (REQUIRED)
# ============================================================================
# Get these from: https://console.cloud.yandex.ru/
YANDEX_FOLDER_ID=your_folder_id_here
YANDEX_API_KEY=your_api_key_here
# Optional: IAM token (alternative to API key)
# YANDEX_IAM_TOKEN=your_iam_token_here

# ============================================================================
# MongoDB Configuration (REQUIRED)
# ============================================================================
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/financial_career_coach
MONGO_DB=financial_career_coach

# ============================================================================
# Application Configuration
# ============================================================================
APP_ENV=development
# Options: development, production, testing

APP_HOST=0.0.0.0
APP_PORT=8000
# Note: PORT takes precedence over APP_PORT (used by Cloud Run)

# ============================================================================
# Chat Configuration
# ============================================================================
MESSAGE_WINDOW_SIZE=40
# Number of messages to include in context for LLM

# ============================================================================
# Security Configuration (Optional)
# ============================================================================
# JWT secret for authentication (if implemented)
# BACKEND_JWT_SECRET=your_jwt_secret_here
# BACKEND_JWT_ALGORITHM=HS256

# ============================================================================
# CORS Configuration (Optional)
# ============================================================================
# Comma-separated list of allowed origins
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
# Default: * (all origins) - NOT RECOMMENDED FOR PRODUCTION

# ============================================================================
# Rate Limiting (Optional)
# ============================================================================
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60
# Requests per window (seconds)

# ============================================================================
# Embeddings Directory (Optional)
# ============================================================================
# Custom path to embeddings directory
# EMBEDDINGS_DIR=/app/data/embeddings



